<%- include ('partials/header.ejs'); -%>
    <div class="container">
        <% if (message != '') { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">





            <div class="form-row">
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Instrument Name" required>
                </div>


                <div class="form-group col-md-6">
                    <select id="position" name="position" class="form-control" required>
                        <option selected disabled>Instrument Type</option>
                        <option>String Instrument</option>
                        <option>Percussion Instrument</option>
                        <option>Key Instrument</option>
                        <option>Wind Instrument</option>
                        
                    </select>
                </div>


                <div class="form-group col-md-4">
                    
                    <select id="itype" name="itype" class="form-control" required>
                    <option selected disabled>Region</option>
                        <option>Indian Instrument</option>
                        <option>Western Instrument</option>
                    </select>

                </div>


                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="number" id="number" placeholder="Quantity" required>
                </div>

            </div>

            <div class="form-row">

                <div class="form-group col-md-6">
                    <input type="number" class="form-control" name="price" id="price" placeholder="Price" required>
                </div>


                <div class="col-md-12">
                    <label for="player-img"><b>Instrument Image</b></label><br>
                    <input type="file" name="image" id="player-img" class="" required>
                </div>
            </div>
            <button type="submit" class="btn btn-primary float-right">Add Instrument</button>
        </form>
    </div>


    <div class="slidershow middle">

        <div class="slides">
          <input type="radio" name="r" id="r1" checked>
          <input type="radio" name="r" id="r2">
          <input type="radio" name="r" id="r3">
          <input type="radio" name="r" id="r4">
          <input type="radio" name="r" id="r5">
          <div class="slide s1">
            <img src="/assets/img/vio1.jpg" alt="">
          </div>
          <div class="slide">
            <img src="/assets/img/sitar.jpg" alt="">
          </div>
          <div class="slide">
            <img src="/assets/img/tabla.jpg" alt="">
          </div>
          <div class="slide">
            <img src="/assets/img/veena.jpg" alt="">
          </div>
          <div class="slide">
            <img src="/assets/img/harmonium_.jpg" alt="">
          </div>
        </div>
      
        <div class="navigation">
          <label for="r1" class="bar"></label>
          <label for="r2" class="bar"></label>
          <label for="r3" class="bar"></label>
          <label for="r4" class="bar"></label>
          <label for="r5" class="bar"></label>
        </div>
      </div>
      
      
      
      
      <div class="slidershow middle0">
      
        <div class="slides0">
          <input type="radio" name="r0" id="r10" checked>
          <input type="radio" name="r0" id="r20">
          <input type="radio" name="r0" id="r30">
          <input type="radio" name="r0" id="r40">
          <input type="radio" name="r0" id="r50">
          <div class="slide s10">
            <img src="/assets/img/electric.jpg" alt="">
          </div>
          <div class="slide0">
            <img src="/assets/img/drums.png" alt="">
          </div>
          <div class="slide0">
            <img src="/assets/img/piano.jpg" alt="">
          </div>
          <div class="slide0">
            <img src="/assets/img/trumpet.jpg" alt="">
          </div>
          <div class="slide0">
            <img src="/assets/img/download.jpg" alt="">
          </div>
        </div>
      
        <div class="navigation0">
          <label for="r10" class="bar0"></label>
          <label for="r20" class="bar0"></label>
          <label for="r30" class="bar0"></label>
          <label for="r40" class="bar0"></label>
          <label for="r50" class="bar0"></label>
        </div>
      </div>




<style>


.slidershow{
    width: 800px;
    height: 600px;
    overflow: hidden;
    padding-top: 150px;
   
  }
  .middle{
    position:absolute;
    top: 97%;
    right: 30%;
    transform: translate(-50%,-50%);
  }
  .navigation{
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
  }
  .bar{
    width: 50px;
    height: 10px;
    border: 2px solid #fff;
    margin: 6px;
    cursor: pointer;
    transition: 0.4s;
  }
  .bar:hover{
    background: #fff;
  }
  
  input[name="r"]{
      position: absolute;
      visibility: hidden;
  }
  
  .slides{
    width: 500%;
    height: 100%;
    display: flex;
  }
  
  .slide{
    width: 20%;
    transition: 0.6s;
  }
  .slide img{
    width: 100%;
    height: 100%;
  }
  
